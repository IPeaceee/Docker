# PostgreSQL Configuration
# Copy this file to .env and update with your values

# Database Credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=myapp_db

# Timezone (e.g., UTC, Asia/Ho_Chi_Minh)
TZ=UTC

# PostgreSQL Data Directory (leave empty for default)
# PGDATA=/var/lib/postgresql/data/pgdata

# Backup Configuration
BACKUP_POSTGRES_HOST=postgres  # For dev profile, use 'postgres-prod' for prod profile
SCHEDULE=0 2 * * *  # Daily at 2 AM (cron format)
BACKUP_KEEP_DAYS=7
BACKUP_KEEP_WEEKS=4
BACKUP_KEEP_MONTHS=6

# PgAdmin Configuration (Dev only)
PGADMIN_DEFAULT_EMAIL=admin@aiara.com
PGADMIN_DEFAULT_PASSWORD=admin_password_here

# ============================================
# IMPORTANT NOTES:
# ============================================
# 1. Copy this file: cp .env.example .env
# 2. Update POSTGRES_PASSWORD with a strong password
# 3. Update PGADMIN_DEFAULT_PASSWORD for dev environment
# 4. Never commit .env to version control
# 5. For production, use BACKUP_POSTGRES_HOST=postgres-prod
# 6. Consider using Docker secrets for sensitive data
